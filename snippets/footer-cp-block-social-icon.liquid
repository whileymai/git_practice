{% if section.settings.footer_social_size != '' %}
<style>
  .footer .social-icons li {
    font-size:{{section.settings.footer_social_size | plus:0}}px;
  }
</style>
{% endif %}
{%- if section.settings.footer_social_heading != '' -%}
<h4 class="title">{{section.settings.footer_social_heading}}</h4>
<div class="strip-line"></div>
{%- endif -%}
{%- assign social_icons = "cc-mastercard|cc-visa|apple-pay|cc-amex" | split: "|" | uniq -%}
<ul class="social-icons">
  {%- assign social_number = social_icons.size | minus:1 -%}
  {%- for i in (0..social_number) -%}
  {%- assign social_name = 'social_icon_' | append:social_icons[i] -%}
  <li><i class="fa fa-{{social_icons[i]}}"></i></li>
  {%- endfor -%}
</ul>